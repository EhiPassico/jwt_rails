<div class="container" ng-controller="users_controller">

  <br/><br/><br/><br/><br/>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <div ng-if="display_error_message">
        <alert class="alert alert-warning" >{{display_error_message}}
        </alert>
        <br/>
        <br/>
      </div>

      <div class="form-group">
        <label>Username</label>
        <input type="text" class="form-control" ng-model="user.username">
      </div>

      <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" ng-model="user.password">
      </div>

      <button class="btn btn-lg btn-success" ng-click="login_user() ">Login</button>
      &nbsp;&nbsp;<a href="" ng-click="signup_user()" class="">signup</a>
    </div>
  </div>


</div>